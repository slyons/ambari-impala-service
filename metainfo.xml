<?xml version="1.0"?>
<metainfo>
    <schemaVersion>2.0</schemaVersion>
    <services>
        <service>
            <name>IMPALA</name>
            <displayName>Impala</displayName>
            <comment>impala config</comment>
            <version>0.11.1</version>
            <components>
                <component>
                  <name>IMPALA_STATE_STORE</name>
                  <displayName>Impala_State_Store</displayName>
                  <category>SLAVE</category>
                  <commandScript>
                    <script>scripts/impala-state-store.py</script>
                    <scriptType>PYTHON</scriptType>
                    <timeout>10000</timeout>
                  </commandScript>
                  <dependencies>
                    <dependency>
                      <name>HDFS/HDFS_CLIENT</name>
                      <scope>host</scope>
                      <auto-deploy>
                        <enabled>true</enabled>
                      </auto-deploy>
                    </dependency>
                    <dependency>
                      <name>HIVE/HIVE_METASTORE</name>
                      <scope>cluster</scope>
                      <auto-deploy>
                        <enabled>true</enabled>
                      </auto-deploy>
                    </dependency>
                </component>

                <component>
                  <name>IMPALA_CATALOG_SERVICE</name>
                  <displayName>Impala_Catalog_Service</displayName>
                  <category>SLAVE</category>
                  <commandScript>
                    <script>scripts/impala-catalog.py</script>
                    <scriptType>PYTHON</scriptType>
                    <timeout>10000</timeout>
                  </commandScript>
                  <dependencies>
                    <dependency>
                      <name>HDFS/HDFS_CLIENT</name>
                      <scope>host</scope>
                      <auto-deploy>
                        <enabled>true</enabled>
                      </auto-deploy>
                    </dependency>
                    <dependency>
                      <name>HIVE/HIVE_METASTORE</name>
                      <scope>cluster</scope>
                      <auto-deploy>
                        <enabled>true</enabled>
                      </auto-deploy>
                    </dependency>
                </component>

                <component>
                  <name>IMPALA_DAEMON</name>
                  <displayName>Impala_Daemon</displayName>
                  <category>SLAVE</category>
                  <commandScript>
                    <script>scripts/impala-daemon.py</script>
                    <scriptType>PYTHON</scriptType>
                    <timeout>10000</timeout>
                  </commandScript>
                  <configFiles>
                    <configFile>
                      <type>env</type>
                      <fileName>impala.defaults</fileName>
                      <dictionaryName>impala-default</dictionaryName>
                    </configFile>
                  </configFiles>
                  <dependencies>
                    <dependency>
                      <name>HDFS/HDFS_CLIENT</name>
                      <scope>host</scope>
                      <auto-deploy>
                        <enabled>true</enabled>
                      </auto-deploy>
                    </dependency>
                    <dependency>
                      <name>HIVE/HIVE_METASTORE</name>
                      <scope>cluster</scope>
                      <auto-deploy>
                        <enabled>true</enabled>
                      </auto-deploy>
                    </dependency>
                </component>
            </components>


            <osSpecifics>
              <osSpecific>
                <osFamily>redhat6</osFamily>
                <packages>
                   <package><name>git</name></package>    
                   <package><name>apache-maven-3.2*</name></package>                                           
                </packages>
              </osSpecific>
              
            </osSpecifics>
      	    <configuration-dependencies>
	             <config-type>impala-ambari-config</config-type>
               <config-type>impala-env</config-type>
               <config-type>impala-default</config-type>	   
      	    </configuration-dependencies>
        </service>

        <requiredServices>
          <service>HDFS</service>
        </requiredServices>
    </services>
</metainfo>
