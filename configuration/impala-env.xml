<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>

    <property>
        <name>impala_log_dir</name>
        <value>/var/log/impala</value>
        <description>impala Log dir</description>
    </property>

    <property>
        <name>impala_conf_dir</name>
        <value>/etc/impala/conf</value>
        <description>Destination for all required config files for Impala</description>
    </property>

    <property>
        <name>impala_user</name>
        <value>impala</value>
        <property-type>USER</property-type>
        <description>User impala catalog/state-store/daemon runs as</description>
    </property>

    <property>
        <name>impala_group</name>
        <value>impala</value>
        <property-type>GROUP</property-type>
        <description>impala group</description>
    </property>

</configuration>
